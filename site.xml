                                        var="quiqqer.gallery.settings.type.component-slideBehind"
                                />
                            </option>
                        </select>

                        <select conf="quiqqer.settings.gallery.sort">
                            <text>
                                <locale group="quiqqer/gallery" var="quiqqer.gallery.settings.sort" />
                            </text>
                            <option value="title DESC">
                                <locale group="quiqqer/gallery" var="quiqqer.gallery.settings.sort.titleDESC" />
